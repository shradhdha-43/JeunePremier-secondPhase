          "value": "btn",
          "label": "Button"
          },
          {
          "value": "link",
          "label": "Link"
          }
          ],
          "default": "link"
        },
		{
          "type": "radio",
          "id": "img_aligment",
          "label": "Media alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "right"
        },
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "html",
			"id": "desc",
			"label": "Description"
		},
		{
			"type": "text",
			"id": "link_txt",
			"label": "Link Text"
		},
		{
			"type": "text",
			"id": "link_hover_txt",
			"label": "Link Hover Text"
		},
		{
			"type": "url",
			"id": "link",
			"label": "Link"
		},
		{
			"type": "image_picker",
			"id": "img",
			"label": "Image Main"
