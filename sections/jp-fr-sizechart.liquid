{%- if request.path contains 'fr-fr' or request.path contains 'fr' -%}
{{ 'jp-sizechart.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .left-col-1-fr div:nth-child(4) {
    height: 64px;
  }
  .left-col-1-fr div:nth-child(3) {
    height: 160px;
    background-color: #e8dfcf;
  }
  .left-col-1-fr div:nth-child(2) {
    height: 128px;
  }
  .hide_desktop{
    display:none;
  }
  .color1 {
    background: transparent;
  }
  .color2 {
    background: #f9f7f3;
  }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    @media screen and (max-width: 989px) {
      .hide_mob{
        display:none;
      }
      .hide_desktop{
        display:block;
      }
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}
<div class="jp_sizechart section-{{ section.id }}-padding">
  {%- if section.settings.maten_in_cm != blank -%}
    <div class="jp_size_chart_bottom_txt">
      <span>{{- section.settings.maten_in_cm -}}</span>
    </div>
  {%- endif -%}
  {%- if section.settings.heading != blank -%}
    <div class="jp_sizechart_head">
      <h2 class="h2_hero_heading title">{{- section.settings.heading -}}</h2>
    </div>
  {%- endif -%}
  <div class="jp_table_wrapper">
    <div class="left-table">
      <div class="fixed-element">
        <div class="left-col-1 left-col-1-fr">
          <div class="row_1">{{- section.settings.first_column_heading -}}</div>
          <div class="row_2">{{- section.settings.first_column_2nd_cel -}}</div>
          <div class="row_3">{{- section.settings.first_column_3rd_cell -}}</div>
          <div class="row_4">{{- section.settings.fourth_column_4th_cell -}}</div>
        </div>
        <div class="left-col-2 left-col-2-fr">
          <div class="row_1">
            <span class="hide_mob">{{- section.settings.second_column_heading -}}</span
            ><span class="hide_desktop">{{- section.settings.col_heading_2_mob -}}</span>
          </div>
          {%- assign second_col_arr = section.settings.second_column_cell_entries | split: ',' -%}
          {%- for second_value in second_col_arr -%}
            <div class="row-col-{{ forloop.index }} row_common color2">{{ second_value | escape }}</div>
          {%- endfor -%}
        </div>
        {%- if section.settings.third_column_heading != blank -%}
          <div class="left-col-3">
            <div class="row_1">{{- section.settings.third_column_heading -}}</div>
            {%- assign third_col_arr = section.settings.third_column_cell_entries | split: ',' -%}
            {%- for third_value in third_col_arr -%}
              <div class="row-col-{{ forloop.index }} row_common">{{ third_value | escape }}</div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    <div class="right-table">
      <div class="col-wrapper slider-fr">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'product_grid' -%}
              <div
                class="col-1 {% if block.settings.background_color == 'color1' %}color1{% else %}color2{% endif %}"
                {{ block.shopify_attributes }}
              >
                <div class="left-rtc-1">
                  <div class="image_wrap">
                    {%- if block.settings.product_image != blank -%}
                      {{
                        block.settings.product_image
                        | image_url: width: 200
                        | image_tag: loading: 'lazy', widths: '165, 360, 535, 750, 1070, 1500'
                      }}
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'jp_sizechart_placeholder' }}
