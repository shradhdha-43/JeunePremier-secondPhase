                  <span>{{- block.settings.col_head -}}</span>
                </div>
                <div class="left-rtc-2 right-cell-fr">{{- block.settings.cell_1 -}}</div>
                <div class="left-rtc-3 right-cell-fr">{{- block.settings.cell_2 -}}</div>
                <div class="left-rtc-4 right-cell-fr">{{- block.settings.cell_3 -}}</div>
                <div class="left-rtc-5 right-cell-fr">{{- block.settings.cell_4 -}}</div>
