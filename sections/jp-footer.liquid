{{ 'jp-footer.css' | asset_url | stylesheet_tag }}

<footer>

  <div class="container {% if template == "product" or template == "product.keychain" or template == "product.wrapper" %}product-cta-marg-m{% endif %}">
    <div class="footer-part footer-one flex-box justify-between">
    	{% for block in section.blocks %}
      		{% if block.type == 'menu' %}
      			<div class="footer-menu-wrap footer-part-inner">
                  <div class="footer-menu-title title">{{ block.settings.menu_title }}</div>
      			{% for link in linklists[block.settings.menu].links %}
                  <a href="{{ link.url }}" class="footer-link light">{{ link.title }}</a>
      			{% endfor %}
      			</div>
      		{% endif %}
      	{% endfor %}
    </div>
    <div class="footer-part footer-two flex-box justify-between">
    	{% for block in section.blocks %}
      		{% if block.type == 'privacy_menu' %}
      			<div class="footer-menu-wrap footer-part-inner">
                  <div class="footer-menu-title title">{{ block.settings.menu_title }}</div>
      			{% for link in linklists[block.settings.menu].links %}
                  <a href="{{ link.url }}" class="footer-link light">{{ link.title }}</a>
      			{% endfor %}
      			</div>
      		{% endif %}
      	{% endfor %}
      <div class="footer-languages-wrap footer-part-inner">
        <div class="footer-menu-title title">{{ section.settings.lang_title }}</div>
        <div class="footer-languages">
          <div class="langs rel">
			{%  assign  countries = "NL,BE,DE,KR,IT,US,DK,CH,FR" | split: "," %}
			{%  assign  count_code = localization.country.iso_code %}
			  {%- if countries contains count_code -%}
				<span class="flag flag-{{ localization.country.iso_code | downcase }}"></span>
				<span class="header-country-code">{{ localization.country.iso_code }}</span>
				{%- else -%}
				<span class="flag">{% render 'icon-globe' %}</span>
				<span class="header-country-code">Global</span>
			  {%- endif -%}
          </div>
          {% comment %}
          {% if settings.english %}
          <a class="footer-lang-wrap flex-box align-center en" data-lang="en" href="#"><span class="lang-flag">{% include 'flag-english' %}</span><span class="lang-name light">ENGLISH</span></a>
          {% endif %}
          {% if settings.german %}
          <a class="footer-lang-wrap flex-box align-center de" data-lang="de" href="https://www.jeunepremier.de"><span class="lang-flag">{% include 'flag-germany' %}</span><span class="lang-name light">GERMAN</span></a>
          {% endif %}
          {% if settings.italian %}
          <a class="footer-lang-wrap flex-box align-center it" data-lang="it" href="/it"><span class="lang-flag">{% include 'flag-italian' %}</span><span class="lang-name light">ITALIAN</span></a>
          {% endif %}
          {% if settings.danish %}
          <a class="footer-lang-wrap flex-box align-center da" data-lang="da" href="/da"><span class="lang-flag">{% include 'flag-danish' %}</span><span class="lang-name light">DANISH</span></a>
          {% endif %}
          {% if settings.deutsch %}
          <a class="footer-lang-wrap flex-box align-center nl" data-lang="nl" href="/nl"><span class="lang-flag">{% include 'flag-belgium' %}</span><span class="lang-name light">DUTCH</span></a>
          {% endif %}
          {% if settings.french %}
          <a class="footer-lang-wrap flex-box align-center fr" data-lang="fr" href="/fr"><span class="lang-flag">{% include 'flag-french' %}</span><span class="lang-name light">FRENCH</span></a>
          {% endif %}
          {% if settings.spanish %}
          <a class="footer-lang-wrap flex-box align-center es" data-lang="es" href="/es"><span class="lang-flag">{% include 'flag-spanish' %}</span><span class="lang-name light">SPANISH</span></a>
          {% endif %}
          {% if settings.russian %}
          <a class="footer-lang-wrap flex-box align-center ru" data-lang="ru" href="https://www.jeune-premier.ru"><span class="lang-flag">{% include 'flag-russian' %}</span><span class="lang-name light">RUSSIAN</span></a>
          {% endif %}
          {% endcomment %}
        </div>
      </div>
      <div class="footer-sm-wrap footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.sm_title }}</div>
        <div class="sm-logos flex-box">
        	{% for block in section.blocks %}
      		{% if block.type == 'sm' %}
          		<a href="{{ block.settings.sm_link }}" class="sm_logo" target="_blank">
					<span class="visually-hidden">Social Media link</span>
					{{ block.settings.sm_logo }}
				</a>
      		{% endif %}
      	{% endfor %}
        </div>
      </div>
    </div>
    <div class="footer-part footer-three flex-box justify-between">
      <div class="footer-shipping footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.shipping_title }}</div>
        <div class="shipping-companies-svgs">
        	{% for block in section.blocks %}
      		{% if block.type == 'shipping_logo' %}
          		<div class="shipping-logo">
					<img src="{{ block.settings.shipping_logo | img_url: "120x" }}" alt="{{ block.settings.shipping_logo.alt }}" loading= 'lazy'>
				</div>
          	{% endif %}
      		{% endfor %}
        </div>
      </div>
      <div class="footer-payment footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.payment_title }}</div>
        <div class="payment-companies-svgs">     
          <div class="payment-logo">                
          {%- for type in shop.enabled_payment_types -%}
            {% unless type == "klarna-slice-it" %}
            {{ type | payment_type_svg_tag: class: 'pay-icon' }}
            {% endunless %}
          {%- endfor -%}
            </div>
        </div>
      </div>
      <div class="footer-secure footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.secure_title }}</div>
          <div class="secure-logo">
			{{
				section.settings.secure_logo
				| image_url: width: 180
				| image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
			}}
			{% comment %} <img src="{{ section.settings.secure_logo | img_url: "180x" }}" alt="logo"> {% endcomment %}
		</div>
          	
      </div>
    </div>
    <div class="footer-part footer-four flex-box justify-between">
      <div class="footer-company footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.company_title }}</div>
        <div class="company-address light">{{ section.settings.company_addr }}</div>
      </div>
      <div class="footer-brands footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.brands_title }}</div>
        <div class="footer-brands-logos flex-box">
        	<a href="{{ section.settings.brand1_url }}" class="footer-brand-logo">
				<span class="visually-hidden">jeune premier</span>
				{{
					section.settings.brand1_logo_2
					| image_url: width: 80
					| image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
				}}
				{% comment %} <img src="{{ section.settings.brand1_logo_2 | img_url: "80x" }}" alt="logo"> {% endcomment %}
			</a>
          	<a href="{{ section.settings.brand2_url }}" class="footer-brand-logo">
				<span class="visually-hidden">jack piers</span>
				{{
					section.settings.brand2_logo_2
					| image_url: width: 80
					| image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
				}}
				{% comment %} <img src="{{ section.settings.brand2_logo_2 | img_url: "80x" }}" alt="logo"> {% endcomment %}
			</a>
        </div>
      </div>
      <div class="footer-showroom footer-part-inner">
      	<div class="footer-menu-title title">{{ section.settings.showroom_title }}</div>
        <div class="showroom-address light">{{ section.settings.showroom_addr }}</div>
      </div>
    </div>
    <div class="copyright-text light">{{ section.settings.copyright }}</div> 
  </div>
  
</footer>

