<script> 
let currActive = 1;
var next_fs, er;
const progress = document.querySelector("#progress");
const prev = document.querySelector("#prev");
const next = document.querySelector(".next_btn");
const circles = document.querySelectorAll(".circle");
const contents = document.querySelectorAll(".content");

$(".content").each(function(i, val){  
  $(val).find('.next_btn').on("click", function(){
    currActive++; 
    er = $(this).closest('.content');  
    if(er.hasClass('active_cont')){ 
      next_fs = $(this).closest('.content').next();
      $(this).closest('.content').removeClass('active_cont');
      next_fs.addClass('active_cont');  
    } 
 
    if (currActive > circles.length) {
        currActive = circles.length;
    }
    update();
  }); 
}); 

 $('#prev').on("click", function(){
  var ss = $(this).parents('.jp_sl_bottom_part').find('.jp_sl_step_content .content');
  $(ss).each(function(i, val){  
    if($(val).hasClass('active_cont')){
      $(val).removeClass('active_cont');
      $(val).prev().addClass('active_cont');
    }
  });
  currActive--; 
    if (currActive < 1) {
        currActive = 1;
    }
    update();
});
 
const update = () => {
    circles.forEach((circle, i) => {
        i < currActive
            ? circle.classList.add("active")
            : circle.classList.remove("active");
    });  
    const actives = document.querySelectorAll(".active");
    const width = ((actives.length - 1) / (circles.length - 1)) * 100;
    progress.style.width = `${width}%`; 
    if (currActive === 1) { 
        prev.disabled = true;
    } else if (currActive === circles.length) { 
        next.disabled = true;
    } else {
        prev.disabled = false;
        next.disabled = false;
    }
};
 
</script>


