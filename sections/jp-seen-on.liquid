{{ 'jp-seen-on.css' | asset_url | stylesheet_tag }}

<div class="seen-on-wrapper">
  <div class="seen-on-title title text-center">{{ section.settings.title }}</div>
  <div class="marquee" style="height: {{ section.settings.marquee_height }}px">
    <div class="marquee-wrap featured-banner__wrapper" id="maindiv">
      <span class="marquee-items featured-banner__container" id="div1">
      
        {% for block in section.blocks %}
        	{% if block.type == 'marquee' %}
        		{% if block.settings.img_1 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_1
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        		{% if block.settings.img_2 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_2
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        		{% if block.settings.img_3 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_3
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        	{% endif %}
        {% endfor %}
      </span>
      <span class="marquee-items featured-banner__container" id="div2">
        {% for block in section.blocks %}
        	{% if block.type == 'marquee' %}
        		{% if block.settings.img_1 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_1
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        		{% if block.settings.img_2 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_2
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        		{% if block.settings.img_3 != blank %}
        			<div class="marquee-item marquee-txt light featured-banner__item" style="width: {{ section.settings.marquee_item_width }}px; height: {{ section.settings.marquee_height }}px">
						{{
							block.settings.img_3
							| image_url: width: 200
							| image_tag:
							  loading: 'lazy',
							  sizes: '100vw',
							  widths: '50 , 100 , 150 , 200',
							  class: 'marquee-img'
						  }}
        			</div>
        		{% endif %}
        	{% endif %}
        {% endfor %}
      </span>
    </div>
  </div>
</div>

