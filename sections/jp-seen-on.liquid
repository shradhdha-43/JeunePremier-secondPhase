{% schema %}
  {
    "name": "JP Seen On",
    "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
          "type": "range",
          "id": "marquee_height",
          "min": 12,
          "max": 50,
          "step": 1,
          "unit": "px",
          "label": "Slider Height",
          "default": 28
        },
		{
          "type": "range",
          "id": "marquee_item_width",
          "min": 100,
          "max": 500,
          "step": 20,
          "unit": "px",
          "label": "Slider Height",
          "default": 280
        }
	],
	"blocks": [
		{
			"type": "marquee",
			"name": "Marquee Logo",
			"settings": [
				{
					"type": "image_picker",
					"id": "img_1",
					"label": "Logo Image 1"
				},
				{
					"type": "image_picker",
					"id": "img_2",
					"label": "Logo Image 2"
				},
				{
					"type": "image_picker",
					"id": "img_3",
					"label": "Logo Image 3"
				}
			]
		}
	],
	"presets":[
      {
         "name":"JP Seen On"
      }
   ]
  }
{% endschema %}

