}
.slick-dots li.slick-active
{
  width: 12px !important;
}
.slick-dots li.slick-active button
{
  width: 12px !important;
}
.slick-dots li.slick-active button:before
{
  opacity: 1;
  color: #333;
/*   width: 12px !important; */
  background-color: #333;
}
