  <script>
    $(document).ready(function() {
    var geoText = function(country) {
      $('.js-geo-text').each(function() {
        var $el = $(this);
        var $countryItem = $el.find('[data-country="' + country + '"]');
        if ($countryItem.length === 0) {
          $el.find('[data-country="default"]').show();
        } else {
          $countryItem.show();
        }
      });
    };
